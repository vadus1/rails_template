.row
  .col-sm-4.col-sm-offset-3
    .page-header
      %h1 Забыли свой пароль?
  .col-sm-4.col-sm-offset-3
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      .form-group
        = f.input :email, label: false, input_html: {class: 'form-control'}, :autofocus => true
      = f.button :submit, t('devise.passwords.reset_password'), :class => 'btn btn-primary btn-lg btn-block'
  .col-sm-4.col-sm-offset-1
    = render "devise/shared/links"