.row
  .col-sm-9.col-sm-offset-3
    .page-header
      %h1 Вход
  .col-sm-4.col-sm-offset-3
    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      = f.error_notification
      .form-group
        = f.input :email, label: false, input_html: {class: 'form-control'}
      .form-group
        = f.input :password, label: false, input_html: {class: 'form-control'}
      .form-group
        .pull-left
          = f.input :remember_me, as: :boolean, label: false if devise_mapping.rememberable?
        .pull-left
          = f.label :remember_me, class: 'checkbox inline' if devise_mapping.rememberable?
        .clearfix
        %hr.small
        = f.button :submit, 'Войти', :class => 'btn btn-primary btn-lg btn-block'
  .col-sm-4.col-sm-offset-1
    = render "devise/shared/links"